{% extends "layout.jinja" %}

{% block title %}Dashboard{% endblock %}

{% block title_icon %}wifi icon{% endblock %}
{% block page_title %}Admin Dashboard{% endblock %}
{% block sub_title %}Edit, add, export, and view datasets.{% endblock %}

{% block content %}
    {{ super() }}

    <div class="ui segment">
        <h3>Overall Stats</h3>
        <div class="ui divider"></div>

        <div class="ui statistics grid">

            <div class="five wide column statistic">
                <div class="value">
                    {{ active_stations }}
                </div>
                <div class="label">
                    Active Stations
                </div>
            </div>

            <div class="five wide column statistic">
                <div class="value">
                    {{ total_data_count }}
                </div>
                <div class="label">
                    Total Data Points
                </div>
            </div>

            <div class="five wide column statistic">
                <div class="value">
                    {{ most_data }}
                </div>
                <div class="label">
                    Most Data Points
                </div>
            </div>
        </div>

        <h3>Most Recent Measurements</h3>
        <div class="ui divider"></div>

        <table class="ui table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Location ID</th>
                    <th>Water Level</th>
                    <th>Water Clarity</th>
                </tr>
            </thead>
            <tbody>
                {% for point in data_points %}
                <tr>
                    <td>{{ point.created_at|humanize }}</td>
                    <td>{{ (point.station_id|get_station).name }}</td>
                    <td>{{ point.water_level }}</td>
                    <td>{{ point.water_clarity|water_color }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>



{% endblock %}